FROM node:18-alpine

ENV LOG_LEVEL=DEBUG

WORKDIR /apicode

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Install ts-node globally or make sure it's in dependencies
RUN npm install -g ts-node typescript

# Copy remaining application files
COPY . .

# Expose backend port
EXPOSE 5001

# Start the application with ts-node
CMD ["npx", "ts-node", "src/server.ts"]